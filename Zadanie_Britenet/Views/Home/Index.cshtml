@model Link

    <div class="row">
        <div class="col col-6 alert alert-warning m-3 rounded-3 text-center">
            Proszę podać link, z którego ma być pobrany kod HTML oraz zdjęcia.
        </div>
    </div>


    <br />

    @using (Html.BeginForm("GetUserInput", "Home"))
    {
        <form>
            <input class="form form-text m-3 rounded-3" type="text" name="linkUrl" placeholder="Tutaj wklej link" size="90" />
            <input class="btn btn-primary" type="submit" value="RunScript" />
        </form>
    }